<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN"
        "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <jdbc-connection-pool datasource-classname="DataSourceClassName"
                          res-type="javax.sql.XADataSource" name="PoolName">
        <property name="User" value="UserName" />
        <property name="Password" value="Password" />
        <property name="URL" value="jdbc:oracle:DRIVER:@IP:PORT:SID" />
    </jdbc-connection-pool>
    <jdbc-resource pool-name="PoolName" jndi-name="JNDIName" />
</resources>
